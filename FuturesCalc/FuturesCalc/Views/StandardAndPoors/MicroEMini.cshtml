@model FuturesCalc.Models.Order

@{
    ViewData["Title"] = "MicroEMini";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>MicroEMini</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MicroEMini">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EntryPrice" class="control-label"></label>
                <input asp-for="EntryPrice" class="form-control" />
                <span asp-validation-for="EntryPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExitPrice" class="control-label"></label>
                <input asp-for="ExitPrice" class="form-control" />
                <span asp-validation-for="ExitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contract" class="control-label"></label>
                <input asp-for="Contract" class="form-control" />
                <span asp-validation-for="Contract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
